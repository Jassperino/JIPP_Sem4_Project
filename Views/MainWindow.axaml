<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:JIPP_Projekt.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="450"
        x:Class="JIPP_Projekt.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/clicker.png"
        Title="JIPP_Projekt">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <Grid ColumnDefinitions="1*,1*,1*,1*" ShowGridLines="True" RowDefinitions="1*,1*,1*">
        <Button Name="ClickBtn" Click="ClickBtn_Clicked" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" Background="Aquamarine" FontWeight="Bold" FontSize="20">Wyświetl użytkowników</Button>
        <Button Name="CryptoBtn" Click="CryptoBtn_Clicked" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Center" Background="Aquamarine" FontWeight="Bold" FontSize="20">Wyświetl kryptowaluty</Button>
        <DataGrid Grid.Column="2" Grid.Row="1" Grid.RowSpan="2" ItemsSource="{Binding DisplayItems}" AutoGenerateColumns="True" CanUserResizeColumns="True" />

    </Grid>
    

</Window>
