<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="JIPP_Projekt_Sem4.Views.UserEditWindow"
        Width="300" Height="250"
        Icon="/Assets/clicker.png"
        Title="Edytuj użytkownika">
    <StackPanel Margin="20" Spacing="5">
        <TextBlock Text="Nazwa użytkownika"/>
        <TextBox x:Name="UsernameBox"/>
        <TextBlock Text="Hasło"/>
        <TextBox x:Name="PasswordBox"/>
        <TextBlock Text="Data urodzenia"/>
        <DatePicker x:Name="BirthdayPicker"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="5" Margin="0,10,0,0">
            <Button Content="Zapisz" Click="Save_Click"/>
            <Button Content="Anuluj" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>